<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterFragment">


    <EditText
        android:id="@+id/editTextSetEmail"
        android:layout_width="226dp"
        android:layout_height="82dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="88dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextSetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSetPassword"
        android:layout_width="226dp"
        android:layout_height="82dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/editTextRepeatPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextSetEmail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editTextSetEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextSetEmail"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/editTextRepeatPassword"
        android:layout_width="231dp"
        android:layout_height="88dp"
        android:ems="10"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/textViewEqualPasswords"
        app:layout_constraintEnd_toEndOf="@+id/editTextSetPassword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editTextSetPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextSetPassword"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/textViewEqualPasswords"
        android:layout_width="229dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterSignUp"
        app:layout_constraintEnd_toEndOf="@+id/editTextRepeatPassword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editTextRepeatPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextRepeatPassword"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/btnRegisterSignUp"
        android:layout_width="224dp"
        android:layout_height="51dp"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterGoBack"
        app:layout_constraintEnd_toEndOf="@+id/textViewEqualPasswords"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewEqualPasswords"
        app:layout_constraintTop_toBottomOf="@+id/textViewEqualPasswords"
        app:layout_constraintVertical_bias="0.211" />

    <Button
        android:id="@+id/btnRegisterGoBack"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:text="@string/go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnRegisterSignUp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnRegisterSignUp"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterSignUp"
        app:layout_constraintVertical_bias="0.387" />

</androidx.constraintlayout.widget.ConstraintLayout>